<nav class="navbar fixed-top navbar-expand-lg @TextColour @background" >
  <div class="container">
    <i class="navbar-brand @TextColour" href="#">Marvelous Portfolio</i>
    <button class="navbar-toggler @TextColour" type="button" @onclick="ToggleNavMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="@NavMenuCssClass navbar-collapse justify-content-evenly" @onclick="ToggleNavMenu">
         <div class="nav-item ">
            <NavLink class="nav-link animation" href="/" Match="NavLinkMatch.All">
                <i class="fa-regular fa-address-card me-3"></i> About
            </NavLink>
        </div>
        <div class="nav-item ">
            <NavLink class="nav-link" href="/">
                <span class="fa-solid fa-list-check pe-3"></span>Project
            </NavLink>
        </div>
        <div class="nav-item ">
            <NavLink class="nav-link" href="/">
                <i class="fa-regular fa-file me-3"></i>Resume
            </NavLink>
        </div>

        <div class="nav-item ">
            <NavLink class="nav-link" href="/">
                <i class="fa-solid fa-phone-volume me-3" ></i> Contact
            </NavLink>
        </div>
        
        <div class="nav-item ">
            <NavLink class="nav-link" href="/"@onclick="ToggleColour">
             <i class="fa-solid fa-droplet"></i> Colour Mode
            </NavLink>
        </div>
    </div>
             
  </div>
  
</nav>

@code {
    private bool collapseNavMenu = true;
    private bool black = false;
    private bool color = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string? background => black ? "bg-black" : null;
    private string? TextColour => color ? "text-white" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private void ToggleColour()
    {
        black = !black;
        color = !color;
    }

}

